<Container>:


    canvas:
        Color:
            rgb: (0.98, 0.92, 0.84)
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        size_hint: 0.2, 0.1
        pos_hint: {'x': 0.8, 'y': 0.001}
        color: 0, 0, 0, 1
        text: 'DUEngine v0'

    Button:
        size_hint: 0.2, 0.1
        pos_hint: {'x': 0.01, 'y': 0.88}
        text: 'Start'

    Button:
        size_hint: 0.2, 0.1
        pos_hint: {'x': 0.01,'y': 0.77}
        text: 'Load'

    Button:
        id: pref_btn
        size_hint: 0.2, 0.1
        pos_hint: {'x': 0.78,'y': 0.88}
        text: 'Preferences'
        on_release: dropdown.open(self)



    Button:
        size_hint: 0.2, 0.1
        pos_hint: {'x': 0.01,'y': 0.66}
        text: 'Exit'
        on_release: app.stop()


    Button:
        size_hint: 0.2, 0.1
        pos_hint: {'x': 0.58, 'y':0.88}
        text: 'Music On/Off'
        on_release: root.plays()


    DropDown:
        id: dropdown

        Label:
            markup: True
            text: 'Format:'
            color: 0, 0, 0, 1
            size_hint_y: None
            height: '50dp'


        Button:
            text: 'FullScreen'
            size_hint_y: None
            height: '50dp'
            on_release: root.fs()


        Button:
            text: "Window"
            size_hint_y: None
            height: '50dp'
            on_release: root.ws()
