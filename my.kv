<Container>:
    rows: 4
    padding: 30

    text_input: text_input

    label: label

    image_screen: image_screen

    TextInput:
        id: text_input
        size_hint_y: 0.4
        multiline: True
    Image:
        id: image_screen
        source: 'png/Trahat.jpg'
    Label:
        id: label
        text: "Тут мог быть ваш текст"
        font_size: 20
    BoxLayout:
        Button:
            text: 'Трахать?'
            on_release:
                root.change_pic(0);
        Button:
            text: 'Помогите'
            on_release:
                root.change_pic(1);
        Button:
            text: 'ШАД'
            on_release:
                root.change_pic(2);
        Button:
            text: 'Сменить текст'
            on_release:
                root.change_text();


